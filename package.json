{
  "name": "product-lnd-1",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "env-cmd -e common,local-dev next dev --turbopack",
    "lint": "eslint",
    "format": "prettier --write .",
    "prepare": "husky",
    "build-local": "env-cmd -e common,local-build,on-build next build",
    "build-uat": "env-cmd -e common,uat,on-build next build",
    "build-staging": "env-cmd -e common,staging,on-build next build",
    "build-production": "env-cmd -e common,production,on-build next build",
    "start-local": "env-cmd -e common,local-build next start",
    "start-uat": "env-cmd -e common,uat node server.js",
    "start-staging": "env-cmd -e common,staging node server.js",
    "start-production": "env-cmd -e common,production node server.js",
    "revalidate-shell": "wait-on http://localhost:8000$NEXT_PUBLIC_BASE_PATH/healthz.html && curl http://localhost:8000$NEXT_PUBLIC_BASE_PATH/api/revalidate?key=$NEXT_REVALIDATE_KEY",
    "revalidate-local": "env-cmd -e common,local-build --use-shell -- 'yarn revalidate-shell'",
    "revalidate-uat": "env-cmd -e common,uat --use-shell -- 'yarn revalidate-shell'",
    "revalidate-staging": "env-cmd -e common,staging --use-shell -- 'yarn revalidate-shell'",
    "revalidate-production": "env-cmd -e common,production --use-shell -- 'yarn revalidate-shell'",
    "start-and-revalidate-local": "concurrently \"yarn start-local \" \"yarn revalidate-local\"",
    "start-and-revalidate-uat": "concurrently \"yarn start-uat \" \"yarn revalidate-uat\"",
    "start-and-revalidate-staging": "concurrently \"yarn start-staging \" \"yarn revalidate-staging\"",
    "start-and-revalidate-production": "concurrently \"yarn start-production \" \"yarn revalidate-production\"",
    "deploy-local": "yarn build-local && yarn start-and-revalidate-local"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.12",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.542.0",
    "next": "^15.5.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.5",
    "env-cmd": "10.1.0",
    "wait-on": "7.2.0",
    "concurrently": "8.2.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@next/eslint-plugin-next": "^15.5.2",
    "@rushstack/eslint-patch": "^1.12.0",
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9",
    "eslint-config-next": "^15.5.2",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.8",
    "typescript": "^5"
  }
}
